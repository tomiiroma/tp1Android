<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuestionario">

    <TextView
        android:id="@+id/txtPreguntaNumero"
        android:layout_width="143dp"
        android:layout_height="31dp"
        android:text="Pregunta #1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161" />

    <TextView
        android:id="@+id/txtPreguntaCompleta"
        android:layout_width="245dp"
        android:layout_height="49dp"
        android:text="¿Quién es el jugador latino que ha anotado más goles en la historia de los mundiales?"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="327dp"
        android:layout_height="251dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPreguntaCompleta">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ronaldo Nazario (Brasil)" />

            <RadioButton
                android:id="@+id/rButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gabriel Batistuta (Argentina)" />

            <RadioButton
                android:id="@+id/rButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diego Maradona (Argentina)" />

            <RadioButton
                android:id="@+id/rButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lionel Messi (Argentina)" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="avanzar"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>